<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.petshop.company.dao.EmployerDao">
    <sql id="employerColumns">id, name, firstname, lastname, departmentId</sql>
    <select id="findOne" parameterType="int" resultType="Employer">
        select <include refid="userColumns"/> from employer where id = #{id}
    </select>
</mapper>